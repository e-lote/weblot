<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_purchase_order_line_tree_view">
            <field name="name">PO LINE View</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
		<tree string="PO Line">
			<field name="order_id" />
			<field name="sb_origin" />
			<field name="production_center" />
			<field name="product_id" />
			<field name="isbn" />
			<field name="boxes" />
			<field name="product_qty" />
			<field name="carton_quantity" />
			<field name="carton_volume" />
			<field name="weight" />
			<field name="additional_cost" groups="weblot.group_elote_user_purchaser"/>
		</tree>
            </field>
        </record>

        <record model="ir.ui.view" id="purchase_order_tree_view">
            <field name="name">PO View</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="origin" position="replace">
				<field name="sb_origin" />	
			</field>
                </data>
            </field>
        </record>


        <record model="ir.ui.view" id="view_purchase_order_weblot_form">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
			<button name="view_invoice" position="before" >
				<button name="purchase_in_process" states="consolidated" string="Process"
					groups="weblot.group_elote_user_provider,weblot.group_elote_manager_provider"/>
				<button name="purchase_dispatch"   states="in_process"   string="Dispatch"
					groups="weblot.group_elote_user_provider,weblot.group_elote_manager_provider"/>
				<button name="purchase_receive"    states="dispatched"   string="Receive"
					groups="weblot.group_elote_user_provider,weblot.group_elote_manager_provider"/>
				<button name="purchase_not_valid"  states="consolidated,in_process" string="Invalidate"
					groups="weblot.group_elote_user_provider,weblot.group_elote_manager_provider"/>
			</button>

			<notebook>	
				<page string="RFQ &amp; Bid" position="attributes" >
                                	<attribute name="invisible">1</attribute>
				</page>
			</notebook>	
			<field name="partner_id" position="attributes" >
				<attribute name="attrs">{'readonly': [('order_line','!=',[])]}</attribute>
			</field>
			<field name="incoterm_id" position="attributes" >
                                	<attribute name="invisible">1</attribute>
			</field>
			<field name="bid_date" position="attributes" >
                                	<attribute name="invisible">1</attribute>
			</field>
			<field name="bid_validity" position="attributes" >
                                	<attribute name="invisible">1</attribute>
			</field>
			<field name="payment_term_id" position="attributes" >
                                	<attribute name="invisible">1</attribute>
			</field>

                        <field name="partner_ref" position="after">
				<field name="responsible_id" />
			</field>

                        <field name="date_order" position="after">
				<separator string="Geometry" colspan="2"/>
				<field name="total_volume" />
				<field name="total_weight" />	
				<separator string="Storage" colspan="2"/>
				<field name="porc_teu1" />	
				<field name="porc_teu2" />	
			</field>
			<field name="order_line" position="replace">
				<field name="order_line">
					<tree string="Purchase Order Lines" editable="bottom">
					    <field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,0,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,context)"/>
					    <field name="name"/>
                                            <field name="isbn" readonly="1" />
					    <field name="boxes" />
					    <field name="carton_quantity" readonly="1"/>
        	                	    <field name="weight" readonly="1"/>

					    <field name="date_planned" invisible="1"/>
					    <field name="company_id" groups="base.group_multi_company" widget="selection" invisible="1"/>
					    <field name="account_analytic_id" groups="purchase.group_analytic_accounting" domain="[('type','not in',('view','template'))]" invisible="1"/>
					    <field name="product_uom" groups="product.group_uom" on_change="onchange_product_uom(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,parent.state,context)" invisible="1"/>
					    <field name="price_unit" invisible="1"/>
					    <field name="product_qty" on_change="onchange_product_id(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id,parent.date_order,parent.fiscal_position,date_planned,name,price_unit,parent.state,context)" readonly="1"/>
					    <field name="price_subtotal" readonly="1"/>
					    <field name="taxes_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','!=','sale')]" invisible="1"/>
					    <field name="state" invisible="1"/>
					    <!--field name="picking_type_id" invisible="1"/-->
					</tree>
				</field>
			</field>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="view_purchase_order_weblot_cashflow_form">
            <field name="name">purchase.order.cashflow.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="view_purchase_order_weblot_form"/>
            <field name="group_ids" eval="[(4,ref('weblot.group_elote_user_purchaser'))]"/>
            <field name="arch" type="xml">
                <data>
                    <field name="responsible_id" position="after">
			<group cols="4" colspan="4">
		    	   <field name="is_managed" invisible="1"/>
		    	   <separator string="Cashflow" colspan="2" attrs="{'invisible':[('is_managed','=',False)]}"/>
		    	   <field name="cashflow" nolabel="1" colspan="2" attrs="{'invisible':[('is_managed','=',False)]}"/>
		        </group>
		    </field>
                </data>
            </field>
        </record>

        <record id="action_report_purchase_order_lines" model="ir.actions.act_window">
            <field name="name">Purchase Orders Lines</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_purchase_order_line_tree_view"/>
        </record>

        <menuitem name="Items"
            action="action_report_purchase_order_lines"
            id="menu_po_line_tree" parent="purchase.menu_procurement_management" sequence="55"/>

    <!-- search view -->

        <record model="ir.ui.view" id="view_request_for_quotation_filter">
            <field name="name">PO View</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <data>
                    <field name="create_uid" position="after">
                        <field name="responsible_id" />
                        <field name="lote_id" />
			<filter name="with_cashflow" string="With Cashflow" domain="[('cashflow','!=',False)]"/>
			<filter name="without_cashflow" string="Without Cashflow" domain="[('cashflow','=',False)]"/>
		    </field>
		    <group position="inside">
			<filter string="Lote" domain="[]" context="{'group_by':'lote_id'}"/>
		    </group>
                </data>
            </field>
        </record>


    </data>
</openerp>
