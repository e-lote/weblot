        <record model="ir.ui.view" id="view_purchase_order_weblot_form">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                        <field name="partner_ref" position="after">
				<div colspan="2">
					<br />
					<h2>
						<span>Total Volume (m3):
						<field name="total_volume" />	</span>
					</h2>
				</div>
				<div colspan="2">
					<br />
					<h2>
						<span>Total Weight (kg):
						<field name="total_weight" />	</span>
					</h2>
				</div>




			</field>
                        <field name="product_qty" position="before">
				<field name="isbn" />
				<field name="boxes" />
                                <!-- field name="product_state" / -->
        	                <field name="carton_quantity" />
        	                <!-- field name="carton_volume" / -->
        	                <!-- field name="porc_teu" / -->
        	                <field name="additional_cost" />
        	                <field name="weight" />
        	                <!-- field name="royalties" />
        	                <field name="developing_cost" / -->
                        </field>
                        <field name="price_unit" position="attributes">
                                <attribute name="readonly">1</attribute>
                        </field>
                        <field name="product_qty" position="attributes">
                                <attribute name="readonly">1</attribute>
                        </field>
			<field name="taxes_id" position="attributes">
                                <attribute name="invisible">1</attribute>
			</field>
			<field name="date_planned" position="attributes">
                                <attribute name="invisible">1</attribute>
			</field>
			<!-- field name="date_planned" position="replace" / -->
			<notebook>
				<page string="Volumetrics">
					<field name="order_line">
						<field name="description" position="attributes">
							<attribute name="readonly">1</attribute>
						</field>
					</field>
				</page>
			</notebook>
                </data>
            </field>
        </record>

      
    </data>
