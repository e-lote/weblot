            <field name="name">product.supplierinfo.treeview</field>
            <field name="model">product.supplierinfo</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Product Supplier Info" editable="bottom">
                        <field name="name" />
