<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- PURCHASER -->
    <record model="ir.module.category" id="module_category_elote_purchaser_management">
        <field name="name">Elote Purchaser</field>
        <field name="description">Helps you manage your purchase activities in the Elote site.</field>
        <field name="sequence">-1</field>
    </record>

    <record id="group_elote_user_purchaser" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_elote_purchaser_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_elote_manager_purchaser" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_elote_purchaser_management"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('group_elote_user_purchaser'))]"/>
    </record>

    <record id="elote_purchase_order_user" model="ir.rule">
	    <field name="name">Elote Purchase Order User Rule</field>
	    <field name="model_id" ref="model_purchase_order"/>
	    <field name="global" eval="False"/>
	    <field name="groups" eval="[(4,ref('group_elote_user_purchaser'))]"/>
	    <field name="domain_force">[('responsible_id','=',user.id)]</field>
    </record>

    <record id="elote_purchase_order_manager" model="ir.rule">
	    <field name="name">Elote Purchase Order Manager Rule</field>
	    <field name="model_id" ref="model_purchase_order"/>
	    <field name="global" eval="False"/>
	    <field name="groups" eval="[(4,ref('group_elote_manager_purchaser'))]"/>
	    <field name="domain_force">[]</field>
    </record>

    <!-- PRODUCER -->
    <record model="ir.module.category" id="module_category_elote_producer_management">
        <field name="name">Elote Producer</field>
        <field name="description">Helps you manage your productor activities in the Elote site.</field>
        <field name="sequence">-1</field>
    </record>

    <record id="group_elote_user_provider" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_elote_producer_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_elote_manager_provider" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_elote_producer_management"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('group_elote_user_provider'))]"/>
    </record>

    <record id="elote_provider_order_user" model="ir.rule">
	    <field name="name">Elote Provider Order User Rule</field>
	    <field name="model_id" ref="model_purchase_order"/>
	    <field name="global" eval="False"/>
	    <field name="groups" eval="[(4,ref('group_elote_user_provider'))]"/>
	    <field name="domain_force">[('partner_id','=',user.partner_id.parent_id.id)]</field>
    </record>

    <record id="elote_provider_order_manager" model="ir.rule">
	    <field name="name">Elote Provider Order Manager Rule</field>
	    <field name="model_id" ref="model_purchase_order"/>
	    <field name="global" eval="False"/>
	    <field name="groups" eval="[(4,ref('group_elote_manager_provider'))]"/>
	    <field name="domain_force">[]</field>
    </record>


    </data>
</openerp>
